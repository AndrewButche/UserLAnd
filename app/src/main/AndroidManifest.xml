            </intent-filter>
        </activity>

        <activity
            android:name=".SessionCreateActivity"
            android:label="Create New Session" />

        <activity
            android:name=".FileSystemManagementActivity"
            android:label="File System Management" />

        <activity
            android:name=".FileSystemCreateActivity"
            android:label="Create New File System" />

        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />

        <activity
            android:name=".HelpActivity"
            android:label="Help" />

        <activity
            android:name=".TermsAndConditionsActivity"
            android:label="Terms And Conditions" />

