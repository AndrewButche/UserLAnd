<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.userland.userland">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleTask">

        <activity
            android:name=".SessionListActivity"
            android:label="Sessions" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SessionEditActivity"
            android:label="Edit Session" />

        <activity
            android:name=".FilesystemListActivity"
            android:label="Filesystems" />

        <activity
            android:name=".FilesystemEditActivity"
            android:label="Edit Filesystem" />

        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />

        <activity
            android:name=".HelpActivity"
            android:label="Help" />

        <activity
            android:name=".TermsAndConditionsActivity"
            android:label="Terms And Conditions" />

    </application>

</manifest>